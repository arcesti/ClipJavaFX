<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="28.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clipsjavafx.NovoclipControlelr">
   <children>
      <TextField editable="false">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="tfTitulo" promptText="Titulo do clip">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="tfArtista" promptText="Artista">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <DatePicker fx:id="tfData" prefHeight="25.0" prefWidth="548.0" promptText="Data de lançamento" />
      <TextField fx:id="tfDuracao" promptText="Duração em segundos">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="tfUrl" promptText="URL do clip">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <HBox alignment="CENTER" prefHeight="33.0" prefWidth="600.0" spacing="24.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onConfirm" text="Confirmar" />
            <Button mnemonicParsing="false" onAction="#onCanceler" text="Cancelar" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
